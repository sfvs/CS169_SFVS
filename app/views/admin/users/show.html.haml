- body_class "users_view"
= render 'admin/navi_bar'

%div.users_index_title.effect1
  %div.container-fluid
    %h1 User Content
    %h4= "Contents of user: #{@user.email}"
    %p="Contact Person: #{@user.contact_person}"
    %p="Company Name: #{@user.company_name}"
    %p="Telephone: #{@user.telephone}"

%div.user_content.effect1
  %div.container-fluid
    %table.table.table-hover
      %thead
        %tr
          %th Application
          %th Year
          %th Status
          %th Payment Status
          %th Approved/Pending
          %th Submitted At
          %th More Details
      %tbody
        - if !@applications.nil?
          - @applications.each do |application|
            %tr
              %td= application.application_type.app_type
              %td= application.year
              %td= application.completed == true ? "Submitted" : "Incomplete"
              %td= application.payment.has_paid == true ? application.payment.pay_status_short : link_to("Click here if you received a check payment from this user.", mark_paid_admin_user_application_path(:user_id => @user.id, :id => application.id), :id => "view_btn", :method => "post")
              %td= application.approved == true ? "Approved" : "Pending"
              %td= application.submitted_at
              %td= link_to "View Application", admin_user_application_path(:user_id => @user.id, :id => application.id), :id => "view_btn"
    %div.edit_user_btn
      = link_to "Edit User", edit_admin_user_path(@user), id: "aprove_btn"
    %div.back_user_btn  
      = link_to "Back", admin_users_path, id: "back_btn"
      